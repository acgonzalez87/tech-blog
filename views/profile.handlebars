<div class="container">
<section>
  <h2 class="tag is-primary is-large">Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title" class="label" >Title</label>
      <div class="control">
    <input class="input" type="text" id="post-title" name="post-title" placeholder="Title Text">
  </div>
    </div>
    <div class="field">
  <label for="post-body" class="label">Body</label>
  <div class="control">
    <textarea id="post-body" name="post-body" class="textarea" placeholder="Body Text"></textarea>
  </div>
</div>
    <button type="submit" class="button is-info">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2 class="label">Your Posts</h2>
  <ul>
    {{#each posts as |post|}}
    <li>
  
      <article class="post message is-info">
          <div>
            <a href="/post/{{id}}" class="message-header has-text-white">{{post.title}}</a>
            <p>{{post.post_body}}</p>
          </div>
          <div class="tag is-success is-medium meta">
            {{post.user.username}}
            on
            {{format_date created_at}}
            |
            <a href="/post/{{post.id}}" class="tag is-link">{{post.comments.length}} comment(s)</a>
          </div>
        </article>
      <a href="/profile/edit/{{post.id}}" class="button is-link">Edit post</a>
    </li>
    <br />
    {{/each}}
  </ul>
  {{else}}
  <h3 class="tag is-success is-large">You have no posts to view!</h3>
</section>
{{/if}}


<script src="/javascript/new-post.js"></script>
</div>